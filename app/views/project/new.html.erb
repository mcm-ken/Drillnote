<div class="container">
 <div class ="row" style="margin-left:auto; margin-right:auto;">
   <div class="col-xs-12 col-lg-6 col-lg-push-3" style="margin-top:80px;">
    <h2 style="text-align:center;">
      ドリルを作成する
    </h2>
   </div>
 </div>

<%= form_tag('/project', method: :post) do %>
 <div class="col-xs-10 col-xs-push-1 col-lg-8 col-lg-push-2 row" style="margin-top:20px;  margin-bottom:80px; background-color:white;">
     <div class="col-xs-12 col-lg-10 col-lg-push-1" style="margin-top:40px;">
    <input placeholder="新規ドリル名を入力" type="text" name="name" id="name_drill" class="col-xs-10 col-xs-push-1 col-lg-10 col-lg-push-1" style="height:40px; margin-top:30px; font-size:30px;">
     <div class="col-xs-12 col-lg-10 col-lg-push-1" style="margin-top:10px;">
      <ul id="note_player">
      </ul>
     </div>
    <button type="submit" class="btn btn-primary col-xs-4 col-xs-push-4 col-lg-4 col-lg-push-4" style="height:65px; margin-top:50px; margin-bottom:50px; font-size:30px;" id="kakutei" value="SENT">登録</button>
   <% end %>
  </div>
</div>