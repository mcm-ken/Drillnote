

<% if @project== [] then %>
<div class="container">
<div class="center_text">
 <h2>まだプロジェクトはありません</h2>
 <%= link_to "新しくプロジェクトを作ってみましょう!" ,'/project/new',  method: :get , class:  :center_text %>
 </div>
</div>
<% else %>
<% @project.each do |pros| %>
<div class="container">
<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= pros.name %></h3>
        <p></p>
        <p><span class="btn btn-primary" role="button">
          <%= link_to '編集する', "/project/#{pros.id}/sheet", method: :get %></span>
        <span class="btn btn-primary" role="button">
          <%= link_to '削除する', "/project/#{pros.id}", method: :delete %></span></p>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>
<% end %>
</div>