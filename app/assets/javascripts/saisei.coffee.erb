$(document).on 'click', '#drill_print', ->
  title = $('#show_title').text()
  pdf = new jsPDF('l', 'mm', [250,360])
  aa = 1

  $('div.block').each ->
   pdf.addPage()
   html2canvas document.getElementById("row#{aa}"), onrendered: (canvas) ->
    pdf.addImage dataURI = canvas.toDataURL("image/jpeg"), 'JPEG', 0, 0
    aa = aa + 1
  pdf.save title + '.pdf'

